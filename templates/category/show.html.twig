{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_details'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'action_show_details'|trans({'%id%': category.id|default('')}) }}</h1>


    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{  category.title }}</dd>

        </dl>
        <p>
            <button class="btn" type="submit"><a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'action_edit'|trans }}">
                    {{ 'action_edit'|trans }}
                </a></button> <button class="btn" type="submit"><a href="{{ url('category_create', {id: category.id}) }}" title="{{ 'action_create'|trans }}">
                    {{ 'action_create'|trans }}
                </a>{% if not category.Advertisements|length %} </button>
            <button class="btn" type="submit">
                    <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'action_delete'|trans }}">
                        {{ 'action_delete'|trans }}
                    </a>
                {% endif %}
            </button>
        </p>

        <p>
            <a href="{{ url('category_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>

    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}

